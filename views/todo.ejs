<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Todo List APP test</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #e4dcf1;
                color: #363;
                margin: 0;
                padding: 0;
            }

            h1 {
                background-color: #f9f4f4;
                color: #bfd6f6;
                margin: 0;
                padding: 20px;
                text-align: center;
            }

            ul {
                list-style: none;
                padding: 0;
            }

            ul li {
                background: #fff;
                border: 1px solid #ddd;
                margin-bottom: 10px;
                padding: 10px;
                position: relative;
            }

            ul li a {
                color: #333;
                text-decoration: none;
                font-weight: bold;
            }

            ul li a:hover {
                color: #4CAF50;
            }

            .delete-btn {
                color: red;
                position: absolute;
                right: 10px;
                top: 10px;
            }

            .edit-btn {
                color: #FFC107;
                position: absolute;
                right: 40px;
                top: 10px;
            }

            form {
    background: #e3f0ff;
    padding: 20px;
    margin-top: 20px;
    border-radius: 10px; /* Optional: Adds rounded corners */
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); /* Add shadow effect */
}


            label {
                display: block;
                margin-bottom: 10px;
            }

            input[type="text"] {
                width: 100%;
                padding: 10px;
                margin-bottom: 10px;
                border: 1px solid #ddd;
            }

          input[type="submit"] {
    background-color: #8874a3;
    color: white;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    border-radius: 5px; /* Optional: Adds rounded corners */
    transition: box-shadow 0.3s, transform 0.3s; /* Adds smooth transition */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Add shadow effect */
}

/* Optional: Add hover effect for better interactivity */
input[type="submit"]:hover {
    box-shadow: 0 6px 12px rgba(5, 0, 0, 0.3); /* Slightly larger shadow on hover */
    transform: translateY(-2px); /* Slightly lift the button */
}

            input[type="submit"]:hover {
                background-color: #fbfbf2;
            }
        </style>
    </head>

    <body>
        <h1>Vishal Parjapat , Write your Goals Below</h1>
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li>
                <a href="/todo/delete/<%= index %>" class="delete-btn">✘</a>
                <a href="/todo/<%= index %>" class="edit-btn">✎</a>
                <%- todo %>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <p>
                <label for="newtodo">What should I do For You?</label>
                <input type="text" name="newtodo" id="newtodo" autofocus />
                <input type="submit" value="Send To Your Favourite Person" />
            </p>
        </form>
    </body>
</html>
